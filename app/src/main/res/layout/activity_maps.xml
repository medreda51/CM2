
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/caja"
    android:layout_height="match_parent"
    tools:context=".MapActivity">
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:text="0 m"
        android:background="#ff6999ff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal"

        android:textColor="#ff141414"
        android:textSize="18dp"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:id="@+id/buttonParar"
        android:text="Stop"
        android:background="#ffff2d3c"
        android:textColor="#ff141414"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/buttonParar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:layout_marginTop="10dp"
        android:id="@+id/buttonRegistros"
        android:text="Ver registros"
        android:background="#ff20ff36"
        android:textColor="#ff141414"
      />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:text="Total en m"
        android:background="#ff6999ff"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/buttonParar"
        android:layout_marginLeft="180dp"
        android:textColor="#ff141414"
        android:textSize="18dp"/>

    <Chronometer
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/chronometer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:layout_below="@+id/textView2"
        android:textColor="#ff141414" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map"
        android:layout_marginTop="200dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>