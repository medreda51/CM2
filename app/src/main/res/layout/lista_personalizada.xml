<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ListaPersonalizada"
    android:background="@drawable/layoute_border"
    android:longClickable="false"
    >

    <!--ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:padding="5dp"
        android:layout_toRightOf="@id/logo van abajo"
        android:layout_below="@id/horaPelicula van abajo"
        android:src="@drawable/bibe" /-->


    <!--el antiguo -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:id="@+id/imagen"
        android:paddingTop="15dp"
         android:src="@drawable/correr"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:text="TextViews1"
        android:layout_toRightOf="@+id/imagen"
        android:id="@+id/fecha"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:textColor="#ff020206" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/fecha"
        android:layout_toRightOf="@id/imagen"
        android:text="TextViews2"
        android:id="@+id/distancia"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:textColorHighlight="#ffb1fdff"
        android:textColor="#ff070813" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/distancia"
        android:text="TextViews3"
        android:id="@+id/tiempo"
        android:paddingTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:textColor="#ff060610" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="TextViews4"
        android:id="@+id/calorias"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/distancia"
        android:layout_below="@+id/tiempo"
        android:layout_marginLeft="20dp"
        android:background="@drawable/border"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:lines="@integer/abc_config_activityShortDur"
        android:singleLine="true"
        android:textIsSelectable="false"
        android:textColor="#ff070813" />


</RelativeLayout>
