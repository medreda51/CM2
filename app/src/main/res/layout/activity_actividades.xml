<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.mohamedreda.materialdesign.SubActivity">


    <!-- Incluir la barra de herramientas a este nuevo layout -->
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>


    <TabHost android:id="@android:id/tabhost"
        android:layout_below="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs"
                /><!-- android:background="@color/colorButtonNoPressed" -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >

                <LinearLayout android:id="@+id/tab1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Chronometer
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chronometer"
                        android:layout_gravity="center_horizontal"
                        android:textSize="30sp"
                        android:layout_marginRight="100dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:id="@+id/textView"
                        android:textSize="30sp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-40dp"
                        android:layout_marginRight="60dp"
                        android:textColor="@color/colorPrimaryDark"/>


                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="INICIO"
                        android:id="@+id/button_inicio"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:textSize="20dp"
                        android:background="@drawable/selection"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="200dp" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="FIN"
                        android:id="@+id/button_fin"
                        android:textSize="20dp"
                        android:background="@drawable/selection"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"/>
                </LinearLayout>



                <LinearLayout android:id="@+id/tab2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >


                    <Chronometer
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chronometer2"
                        android:layout_gravity="center_horizontal"
                        android:textSize="30sp"
                        android:layout_marginRight="100dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:id="@+id/textView2"
                        android:textSize="30sp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-40dp"
                        android:layout_marginRight="60dp"
                        android:textColor="@color/colorPrimaryDark"/>


                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="INICIO"
                        android:id="@+id/button_inicio2"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:textSize="20dp"
                        android:background="@drawable/selection"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="200dp" />

                    <Button
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="FIN"
                        android:id="@+id/button_fin2"
                        android:textSize="20dp"
                        android:background="@drawable/selection"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>



</RelativeLayout>

